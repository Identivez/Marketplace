@model LoginDTO
@{
}

<div class="row">
    <div class="col-md-4 mx-auto rounded border p-4">
        <h2 class="text-center mb-3">INICIO DE SESIÓN</h2>
        <hr />
        @* Sección para mostrar un mensaje de error si ViewBag.ErrorMessage no es nulo *@
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>@ViewBag.ErrorMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    </div>
</div>

@* Formulario de inicio de sesión *@
<form method="post">
    @* Campo de entrada para el correo electrónico *@
    <div class="mb-3">
        <label class="form-label">Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    @* Campo de entrada para la contraseña *@
    <div class="mb-3">
        <label class="form-label">Password</label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    @* Campo de verificación para recordar la sesión del usuario *@
    <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" asp-for="RememberMe" />
        <label class="form-check-label">Remember Me</label>
    </div>

    @* Botones de acción para iniciar sesión y cancelar *@
    <div class="row mb-3">
        <div class="col d-grid">
            <button type="submit" class="btn btn-primary">Log in</button>
        </div>
        <div class="col d-grid">
            <a class="btn btn-outline-primary" asp-controller="Home" asp-action="Index" role="button">
                Cancel
            </a>
        </div>
    </div>

    @* Enlace para recuperar la contraseña olvidada *@
    <div>
        <a class="btn btn-link" asp-controller="Account" asp-action="ForgotPassword">
            Forgot your password?
        </a>
    </div>
</form>
