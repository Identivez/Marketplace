@{
    ViewData["Title"] = "Order Confirmed";
}

<div class="container my-5">
    <h2 class="text-center display-4 mb-5" style="color: #DA9D19; text-shadow: 2px 2px #000;">Order Confirmed</h2>

    <!-- Mensaje de confirmación -->
    <div class="row justify-content-center">
        <div class="col-lg-6 text-center">
            <div class="alert alert-success" role="alert">
                <strong>Thank you for your purchase!</strong> Your payment has been successfully processed, and your order is now confirmed.
            </div>
        </div>
    </div>

    <!-- Detalles de la orden -->
    <div class="row justify-content-center">
        <div class="col-lg-6 text-center">
            <h4 class="text-light">Order Details</h4>
            <p><strong>Order ID:</strong> @ViewBag.OrderId</p>
            <p><strong>Total Amount:</strong> $@ViewBag.TotalAmount</p>
            <p><strong>Order Status:</strong> @ViewBag.OrderStatus</p>
            <p><strong>Payment Status:</strong> @ViewBag.PaymentStatus</p>
        </div>
    </div>

    <!-- Opciones para el usuario -->
    <div class="row justify-content-center">
        <div class="col-lg-6 text-center">
            <p class="lead">What would you like to do next?</p>

            <!-- Botón para ver los detalles de la orden -->
            <a href="/Order/Details/@ViewBag.OrderId" class="btn btn-warning btn-lg">
                <i class="bi bi-file-earmark-text"></i> View Order Details
            </a>

            <!-- Botón para regresar al inicio -->
            <a href="/" class="btn btn-primary btn-lg ml-2">
                <i class="bi bi-house-door"></i> Go to Home
            </a>
        </div>
    </div>
</div>

<!-- Estilos personalizados -->
<style>
    body {
        background-color: #1c1e21;
        color: #E6FBFA;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border-radius: 5px;
        border: 1px solid #c3e6cb;
    }

    .btn-warning {
        background-color: #DA9D19;
        border: none;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s, background-color 0.3s;
    }

    .btn-warning:hover {
        background-color: #e68a00;
        transform: translateY(-2px);
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s, background-color 0.3s;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        transform: translateY(-2px);
    }

    .container {
        max-width: 800px;
        margin-top: 50px;
    }
</style>
