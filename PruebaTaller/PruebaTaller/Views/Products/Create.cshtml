@model ProductDTOO

@{
    ViewData["Title"] = "New Product";
}

<div class="container py-5">
    <!-- Título principal -->
    <div class="text-center mb-5">
        <h2 class="text-light fw-bold" style="text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);">Agregar Producto</h2>
    </div>

    <!-- Formulario para carga masiva de productos -->
    <div class="col-md-8 mx-auto mb-5 p-4 rounded bg-dark text-light shadow-sm">
        <h3 class="text-center mb-4">Cargar Productos en Lote</h3>
        <form method="post" enctype="multipart/form-data" asp-action="UploadExcel">
            <div class="mb-3">
                <label for="excelFile" class="form-label">Subir archivo Excel:</label>
                <input type="file" class="form-control" name="excelFile" />
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-primary" style="background-color: #FF9F00; border: none;">Cargar Productos</button>
            </div>
        </form>
    </div>

    <!-- Formulario para agregar un producto individual -->
    <div class="col-md-8 mx-auto p-4 rounded bg-dark text-light shadow-sm">
        <h3 class="text-center mb-4">Nuevo Producto Individual</h3>

        <form method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label">Nombre</label>
                <input class="form-control" asp-for="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Marca</label>
                <input class="form-control" asp-for="Brand">
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Categoría</label>
                <select class="form-select" asp-for="Category">
                    <option value='Hardware'>Hardware</option>
                    <option value='Software'>Software</option>
                    <option value='Periféricos'>Periféricos</option>
                    <option value='Accesorios'>Accesorios</option>
                    <option value='Networking'>Networking</option>
                    <option value='Almacenamiento y backup'>Almacenamiento y backup</option>
                    <option value='Gaming'>Gaming</option>
                    <option value='Realidad virtual y aumentada'>Realidad virtual y aumentada</option>
                    <option value='Componentes de ensamblaje'>Componentes para ensamblaje</option>
                    <option value='Refacciones y piezas de repuesto'>Refacciones y piezas de repuesto</option>
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Precio</label>
                <input class="form-control" asp-for="Price">
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Descripción</label>
                <textarea class="form-control" asp-for="Description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Imagen del Producto</label>
                <input type="file" class="form-control" asp-for="ImageFile">
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Stock Disponible</label>
                <input class="form-control" asp-for="Stock">
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <button type="submit" class="btn btn-primary btn-lg" style="background-color: #FF9F00; border: none;">Guardar Producto</button>
                <a class="btn btn-outline-light btn-lg" asp-controller="Products" asp-action="Index" role="button">Cancelar</a>
            </div>
        </form>
    </div>
</div>

<style>
    body {
        background-color: var(--dark-color);
        color: var(--light-text-color);
    }

    .btn-primary {
        background-color: var(--accent-color);
        border: none;
    }

    .btn-warning {
        background-color: var(--primary-color);
        border: none;
        color: var(--light-text-color);
    }

    .btn-outline-light {
        color: var(--light-text-color);
        border-color: var(--light-text-color);
    }

    .btn-outline-light:hover {
        background-color: var(--light-text-color);
        color: var(--dark-color);
    }
</style>
